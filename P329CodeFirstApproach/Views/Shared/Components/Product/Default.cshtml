@using P329CodeFirstApproach.DataAccessLayer.Entities;
@model List<Product>

@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
            <div class="img">
                <a asp-controller="product" asp-action="details" asp-route-id="@item.Id">
                    <img src="~/img/@item.ImageUrl" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@item.Name</h6>
            </div>
            <div class="price">
                <input type="hidden" value="@item.Id" id="productId"/>
                <span class="text-black-50" id="AddToBasket">Add to cart</span>
                <span class="text-black-50">$@item.Price</span>
            </div>
        </div>
    </div>
}