@model List<Product>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products</h4>
            <a class="btn btn-primary" asp-action="create">Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>
                                    <a class="btn btn-success" asp-action="details" asp-route-id="@item.Id">Details</a>
                                    @*                                    <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">Delete</a>*@
                                    <input type="hidden" value="@item.Id" id="categoryId">
                                    <a class="btn btn-danger" id="deleteCategory">Delete</a>

                                    <a class="btn btn-warning" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    @* <form  asp-action="delete" method="post">
                                <input name="id" value="@item.Id" type="hidden" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                                </form>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>