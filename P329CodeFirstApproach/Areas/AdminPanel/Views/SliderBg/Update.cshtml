@model SliderBg
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update slider bg</h4>
                <img src="~/img/@Model.ImageUrl" style="width:100px;height:100px"/>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" class="form-control" placeholder="photo"></input>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="sliderbg" asp-action="index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
